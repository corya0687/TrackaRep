<%= will_paginate @exercise_pages %>

<table id="exercise-table" class="table table-striped table-bordered ">

<thead>
  <tr>
    <th><%= t "workouts.ex_table.pick"%></th>
    <th><%= t "workouts.ex_table.name"%></th>
    <th><%= t "workouts.ex_table.rating"%></th>
    <th><%= t "workouts.ex_table.sets"%></th>
    <th><%= t "workouts.ex_table.weight"%></th>
    <th><%= t "workouts.ex_table.reps"%></th>
    <th><%= t "workouts.ex_table.rest"%></th>
  </tr>
</thead>
  <%@exercise_pages.each do |exercise|%>
    <%status = @workout.edit_checked?(exercise)%>
  <tr>
    <td><%= check_box_tag "workout[exercise_ids][]", exercise.id, status  %></td>
    <td><%= exercise.name %></td>
    <td><%= exercise.rating %></td>
    <td><%= exercise.sets %></td>
    <td><%= exercise.weight%></td>
    <td><%= exercise.reps %></td>
    <td><%= exercise.rest_period_mins %></td>
  </tr>

  <%end%>

</table>
<%= will_paginate @exercise_pages %>
