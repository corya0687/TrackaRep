<h3>Workout</h3>
<%=render partial: "workout", locals: {workout:@workout}%>
 <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_user_workout_path(current_user, @workout) %>
 <br>
 <br>

<h4><%= t "workouts.show.exercises"%></h4>
<%=render partial: "exercises/exercise", collection: @workout.exercises%>

  <h3><%= t "workouts.show.comment"%></h3>
  <%=t "workouts.show.user"%> "<%=current_user.username%>
<%=form_for @comment do |f|%>
  <%=f.text_area :content%>
  <%=f.hidden_field :user_id, value: current_user.id%>
  <%=f.hidden_field :workout_id, value: @workout.id%></br>
  <%=f.submit "#{t "workouts.show.submit"}"%>
  <%end%>
<br>
<h4><%= t "workouts.show.current_c"%></h4>
  <%if @workout.comments.empty?%>
    <h5><%=t "workouts.show.no_comments"%></h5>
  <%else%>

  <%@workout.comments.each do |comment|%>
    by- <%=comment.user.username%> <br>
    <%=comment.content%><br>
    <%end%>
  <%end%>
