<div class="panel panel-default">
  <div class="panel-heading text-center ">
  <div class="pull-left">
    <%= link_to workout.name, workout %>
  </div>
<%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_user_workout_path(current_user, workout) %>

  </div>

  <div class="panel-body panel_w_table">
    <table class="table table_in_panel">
      <tr >
        <%binding.pry%>
        <%= workout.name %>
      </tr>
      <tr>
        <td><%= t "workouts.workout.rating"%><%=workout.avg_rating%>/10</td>
      </tr>
      <tr>
        <td><%= t "workouts.workout.description"%><%= workout.description%></td>
      </tr>
    </table>
  </div>
  <div class="panel-footer">
    <%if workout.author%>
    <span><%= t "workouts.workout.author"%> <%= workout.author ? workout.author.username : "#{ t "workouts.workout.no_author"}" %></span>
    <%end%>
  </div>

</div>
