<div class="panel panel-default">
  <div class="panel-heading text-center">
    <span class="pull-left"><%= link_to exercise.name, exercise %></span>

    <span class="pull-right"><%=t "exercises.rating"%>-<%=exercise.rating%>/10</span>

    <span>
      <%if current_user%>
      <%= link_to '<span class="glyphicon glyphicon-play" aria-hidden="true"></span>'.html_safe , new_user_exercise_run_path(current_user, exercise) %>
      <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_user_exercise_path(current_user,exercise) %>
      <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, exercise, method: :delete, data: { confirm: "Are you sure?" } %>
      <%end%>
    </span>

  </div>

  <div class="panel-body panel_w_table">
    <table class="table table_in_panel">
      <tr>
        <th><%=t "exercises.table.sets"%></th> <th><%=t "exercises.table.reps"%></th> <th><%=t "exercises.table.rest"%></th> <th><%=t "exercises.table.weight"%></th>
      </tr>
      <tr>
        <td><%=exercise.sets%></td><td><%=exercise.reps%></td><td><%=exercise.rest_period%></td><td><%=exercise.percentage_to_max%></td>
      </tr>
    </table>
  </div>
  <div class="panel-footer">
    <span><%= "~#{t "exercises.added_by"}"%> <%= exercise.author.username %></span>

  </div>

</div>
